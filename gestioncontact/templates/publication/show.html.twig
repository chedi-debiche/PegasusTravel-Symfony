{% extends 'baseBack.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}

    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idpub</th>
                <td>{{ publication.idpub }}</td>
            </tr>
            <tr>
                <th>Datepub</th>
                <td>{{ publication.datepub ? publication.datepub|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ publication.path }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
        </tbody>
    </table>

    <a type="submit" class="btn btn-sm btn-outline-primary" href="{{ path('app_publication_index') }}">back to list</a>

    <a type="submit" class="btn btn-sm btn-outline-primary" href="{{ path('app_publication_edit', {'idpub': publication.idpub}) }}">edit</a>

    {{ include('publication/_delete_form.html.twig') }}

{% endblock %}
