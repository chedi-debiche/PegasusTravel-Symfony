                        <label for="html5-date-input" class="col-md-2 col-form-label">Date</label>
                        <div class="col-md-10">
                            {{ form_widget(form.date,{'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.date,{'attr':{'class':'text-danger'}}) }}
                        </div>
                    </div>


