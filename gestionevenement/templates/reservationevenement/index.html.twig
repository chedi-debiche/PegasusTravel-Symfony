{% extends 'baseFront.html.twig' %}
{% block title %}Reservation evenement {% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">

    <div style=" display: flex;align-content: center ; justify-content: center ; margin-top: 100px ; padding: 20px">
        <div class="col-md-6">
            <div class="card mb-4">
    <h1>Reservation evenement </h1>

    <table class="table">
        <thead>
            <tr>

                <th style="text-align: center":>Nom de la réservation </th>
                <th style="text-align: center">Date de la réservation </th>
                <th style="text-align: center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservationevenement in reservationevenements %}
            <tr>

                <td style="text-align: center">{{ reservationevenement.nomre }}</td>
                <td style="text-align: center" >{{ reservationevenement.datere ? reservationevenement.datere|date('Y-m-d') : '' }}</td>
                <td style="text-align: center" >
                    <a type="submit" class="btn btn-primary"  href="{{ path('app_reservationevenement_show', {'idre': reservationevenement.idre}) }}"> afficher </a>
                    <a type="submit" class="btn btn-primary"  href="{{ path('app_reservationevenement_edit', {'idre': reservationevenement.idre}) }}"> modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>

        </div>
    </div>
</div>
{% endblock %}
