{% extends 'baseFront.html.twig' %}

{% block title %}Hello VoyageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<table border="1">
    <thead>
     <th>Nom du voyage</th>
     <th>Destination du voyage</th>
     <th>Description du voyage</th>
     <th>Prix du voyage</th>
     <th>Réserver un Voyage</th>

    </thead>
    <tbody>
    {% for voyage in v %}
            <tr>
                <td>{{ voyage.nom }}</td>
                <td>{{ voyage.destination }}</td>
                <td>{{ voyage.description }}</td>
                <td>{{ voyage.prix }}</td>
                <td>
                  <  <a href="{{ path('modifVoyage',{'id':voyage.id}) }}">Réserver</a>
                </td>
                <td>
                  <!--  <a href="{{ path('supp_voyage',{'id':voyage.id}) }}">Supprimer</a>-->
                </td>
            </tr>
    {% endfor %}
    </tbody>
</table>

</div>
{% endblock %}
